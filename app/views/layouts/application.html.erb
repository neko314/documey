<!DOCTYPE html>
<html>
  <head>
    <title>Documey</title>
    <link href="/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'https://code.jquery.com/jquery-3.3.1.min.js', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz" crossorigin="anonymous">
  </head>

  <body>
    <div id="wrapper">
      <nav class="header-nav">
        <ul class="header-menus">
          <li><%= link_to "/" do %>
                <%= image_tag 'logo_white.svg', class:"logo"%>
              <% end%></li>
          <% if current_user %>
            <li class="menu"><%= link_to user_path(current_user) do %>
              <i class="fas fa-user"><%= "#{current_user.name}" %></i>
              <% end %></li>
              <!-- <ul class="submenus">
              <li class="submenu"><%= link_to 'Profile', edit_user_path(current_user) %></li>
              </ul> -->
            <li class="menu"><%= link_to user_seminars_path(current_user) do %>
              <i class="fas fa-chalkboard-teacher"><%= t :My_Seminars %></i>
            <% end %></li>
              <!-- <ul class="submenus">
                <li class="submenu"><%= link_to 'Seminars', user_seminars_path(current_user) %></li>
                <li class="submenu"><%= link_to 'New Seminar', new_user_seminar_path(current_user) %></li>
              </ul> -->
            <li class="menu"><%= link_to  :logout, method: :post do %>
              <i class="fas fa-sign-out-alt"><%= t :Logout %></i>
              <% end %></li>
          <% else %>
            <li class="menu"><%= link_to new_user_session_path do %>
              <i class="fas fa-sign-in-alt"><%= t :Login %></i>
              <% end %></li>
            <li class="menu"><%= link_to new_user_path do %>
              <i class="fas fa-user-plus"><%= t :Signup %></i>
              <% end %></li>
          <% end %> 
        </ul>
      </nav>
      <section class="notices">
        <p class="notice"><%= flash[:notice] %></p>
        <p class="alert"><%= flash[:alert] %></p>
      </section>
      <article class="content">
        <%= yield %>
      </article>
      <footer>
        <ul class="footer-menus">
          <li class="footer-menu">documeyとは</li>
          <ul><li class="footer-menu">Contact</li>
            <li><%= link_to "https://github.com/neko314/documey" do %>
              <i class="fab fa-github">GitHub</i>
              <% end %></li>
            <li><%= link_to "" do %>
              <i class="far fa-envelope">GitHub</i>
              <% end %></li>
          </ul>
          <li class="footer-menu">Privacy Policy</li>
        </ul>
        <p class="footer-contact">Copyright © 2018 Kaneko Keiko</p>
      </footer> 
    
    </div>
  </body>
</html>
