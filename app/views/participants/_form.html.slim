= form_with(model: [:user, :seminar, @participant], local: true) do |f|
  - if participant.errors.any?
    #error_explanation
      h2
        = pluralize(participant.errors.count, "error")
        |  prohibited this participant from being saved:
      ul
        - participant.errors.full_messages.each do |message|
          li
            = message
  .forms
    .form
      = f.label :name
      = f.text_field :name
    .form
      = f.label :membership_number
      = f.text_field :membership_number
    .form
      = f.label :email
      = f.email_field :email
    .actions
      = f.submit
