<h1>Participants</h1>

<table>
  <thead>
    <tr>
      <th>name</th>
      <th>Membership_numer</th>
      <th>Email</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @participants.each do |participant| %>
      <tr>
        <td><%= participant.name %></td>
        <td><%= participant.membership_number %></td>
        <td><%= participant.email %></td>
        <td><%= link_to 'Edit', edit_user_seminar_participant_path(current_user, @seminar, participant) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

