<%= form_tag user_sessions_path, :method => :post do %>
  <div class="forms">
    <div class="form">
      <%= label_tag :email %><br />
      <%= text_field_tag :email %>
    </div>
    <div class="form">
      <%= label_tag :password %><br />
      <%= password_field_tag :password %>
    </div>
    <div class="actions">
      <%= submit_tag "Login" %>
    </div>
  </div>
<% end %>
